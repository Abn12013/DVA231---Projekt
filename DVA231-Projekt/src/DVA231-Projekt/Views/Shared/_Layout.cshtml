<!DOCTYPE html>
<html>
<head>
    <title>Blogfrog - @ViewBag.Title</title>
    <meta charset="utf-8" />

    <link rel="stylesheet" href="~/css/site.css" />
    <script type="text/javascript" src="~/js/site.js"></script>

</head>
<body>
    <div id="topbar">
        <img src="~/img/BlogFrog_Logo.jpg" alt="Logo" id="logo" />
        <ul class="menu">
            <li><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
        </ul>
    </div>
    <div id="main">
        <div>
            <!-- Take the contents of the main view and inject them here -->
            @RenderBody()
        </div>
    </div>

    <div id="footer">
        &copy; 2016 Your Blog Ltd.
    </div>

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/site.js"></script>

    @RenderSection("Scripts", false)

</body>
</html>
