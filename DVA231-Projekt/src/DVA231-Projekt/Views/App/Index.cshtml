@*The appcontroller sends in an IEnumerable list of Textposts, add model for intellisense*@
@model IEnumerable<DVA231_Projekt.Models.Textpost>
@{ 
    //Some C# code. ViewvBag is a bag of properties
    ViewBag.Title = "Home Page";
}
<h2>Hello World</h2>
<p>We are creating a webbapplication! It will first be a text blogg, then images will be accommodated</p>
<h2>Your message</h2>

<div class="col-md-6">
    <form>
        <div>
            <label>Title</label>
            <input />
        </div>
        <div>
            <label>Picture</label>
            <input />
        </div>
        <div>
            <label>Message</label>
            <input />
        </div>
        <div><input type="submit" value="Add" /> </div>
    </form>
</div>


<div class="col-md-6">
    <h2>All textpost</h2>
    <ul>
        @foreach (var textpost in Model)
        {
            <li>@textpost.Title (@textpost.Created.ToShortDateString())</li>

        }
    </ul>

</div>